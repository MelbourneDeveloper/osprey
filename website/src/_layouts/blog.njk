---
layout: base
---

<article class="blog-post">
  <header class="blog-header">
    <div class="container">
      <div class="blog-meta">
        {% if tags %}
          <div class="blog-tags">
            {% for tag in tags %}
              {% if tag != "blog" %}
                <span class="tag">{{ tag }}</span>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
        <time class="blog-date" datetime="{{ date | htmlDateString }}">
          {{ date | readableDate }}
        </time>
      </div>
      <h1 class="blog-title">{{ title }}</h1>
      {% if excerpt %}
        <p class="blog-excerpt">{{ excerpt }}</p>
      {% endif %}
      {% if author %}
        <div class="blog-author">
          <span>By {{ author }}</span>
        </div>
      {% endif %}
    </div>
  </header>

  <div class="blog-content">
    <div class="container">
      {{ content | safe }}
    </div>
  </div>

  {% if readingTime %}
    <div class="blog-reading-time">
      <div class="container">
        <small>{{ readingTime }} min read</small>
      </div>
    </div>
  {% endif %}
</article>

<nav class="blog-navigation">
  <div class="container">
    {% if tags and tags.includes("blog") %}
      <a href="/blog/" class="back-to-blog">← Back to Blog</a>
    {% elif tags and tags.includes("docs") %}
      <a href="/docs/" class="back-to-blog">← Back to Documentation</a>
    {% else %}
      <a href="/blog/" class="back-to-blog">← Back to Blog</a>
    {% endif %}
  </div>
</nav> 