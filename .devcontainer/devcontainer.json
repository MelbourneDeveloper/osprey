{
  "name": "Osprey Programming Language Dev Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "target": "development"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "source=vscode-extensions,target=/root/.vscode-server/extensions,type=volume",
    "source=go-cache,target=/go/pkg,type=volume",
    "source=cargo-cache,target=/root/.cargo/registry,type=volume",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "go.useLanguageServer": true,
        "go.formatTool": "goimports",
        "go.lintOnSave": "package",
        "go.testFlags": [
          "-v"
        ],
        "go.toolsManagement.checkForUpdates": "local",
        "go.goroot": "/usr/local/go",
        "go.gopath": "/go",
        "go.testWorkingDirectory": "${workspaceFolder}/compiler",
        "go.testExplorer.enable": true,
        "rust-analyzer.check.command": "clippy",
        "rust-analyzer.cargo.buildScripts.enable": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "git.autofetch": true,
        "git.confirmSync": false,
        "C_Cpp.default.cStandard": "c11",
        "C_Cpp.default.cppStandard": "c++17",
        "C_Cpp.default.compilerPath": "/usr/bin/clang-14",
        "C_Cpp.default.compilerArgs": [
          "-Wall",
          "-Wextra", 
          "-Werror",
          "-Wpedantic",
          "-std=c11",
          "-pthread"
        ],
        "C_Cpp.default.includePath": [
          "${workspaceFolder}/compiler/runtime"
        ]
      },
      "extensions": [
        "golang.go",
        "rust-lang.rust-analyzer",
        "antlr.antlr4",
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-vscode.makefile-tools",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-markdown",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode.hexeditor",
        "formulahendry.terminal",
        "fpopescu.vscode-unity-test-adapter",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "matepek.vscode-catch2-test-adapter",
        "ms-vscode.test-adapter-converter",
        "formulahendry.code-runner",
        "twxs.cmake",
        "ms-vscode.cmake-tools",
        "ms-vscode.makefile-tools"
      ]
    }
  },
  "workspaceFolder": "/workspace",
  "remoteUser": "root",
  "forwardPorts": [
    3001,
    8080
  ],
  "portsAttributes": {
    "3001": {
      "label": "Web Compiler",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Development Server",
      "onAutoForward": "notify"
    }
  }
}