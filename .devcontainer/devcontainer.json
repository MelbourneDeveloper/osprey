{
  "name": "Osprey Dev Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  
  "remoteUser": "vscode",
  "containerUser": "vscode",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-vscode.cpptools",
        "mike-lischke.vscode-antlr4",
        "rust-lang.rust-analyzer",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "go.useLanguageServer": true,
        "go.lintTool": "golangci-lint",
        "go.lintOnSave": "package",
        "editor.formatOnSave": true,
        "go.testWorkingDirectory": "${workspaceFolder}/compiler",
        "C_Cpp.default.cStandard": "c11",
        "C_Cpp.default.compilerPath": "/usr/bin/clang",
        "C_Cpp.default.includePath": [
          "${workspaceFolder}/compiler/runtime"
        ],
        "workbench.colorCustomizations": {
          "titleBar.activeBackground": "#2E7D32",
          "titleBar.activeForeground": "#FFFFFF",
          "titleBar.inactiveBackground": "#1B5E20",
          "titleBar.inactiveForeground": "#CCCCCC",
          "activityBar.background": "#2E7D32",
          "activityBar.foreground": "#FFFFFF"
        }
      }
    }
  },

  "postCreateCommand": "/bin/bash .devcontainer/post-create.sh",
  
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  
  "workspaceFolder": "/workspace",
  
  "forwardPorts": [3001, 8080],
  
  "portsAttributes": {
    "3001": {
      "label": "Web Compiler",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Development Server",
      "onAutoForward": "notify"
    }
  }
}